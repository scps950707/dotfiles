alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias memcheck='valgrind --leak-check=yes'
alias memcheckfull='valgrind --leak-check=full'
alias mcda='make clean dep all'
alias mc='make clean'
alias mca='make clean all'
alias ..='cd ..'
alias n='nautilus'
alias g='git'
alias mv='mv -v'
alias rm='rm -I -v'
alias cp='cp -v'
alias dbox='nautilus ~/Dropbox/'
alias listhook='(cd `git rev-parse --show-toplevel` && tree `git config core.hooksPath`)'
alias magit='vim -c MagitOnly'
alias styleall='astyle --suffix=none `find . -regex ".*\.[ch]p*p*$"`'

# some more ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'


alias memcheck='valgrind --leak-check=yes'
alias memcheckfull='valgrind --leak-check=full'
alias mcda='make clean dep all'
alias mc='make clean'
alias mca='make clean all'
alias ..='cd ..'
alias n='nautilus'
alias g='git'
alias mv='mv -v'
alias rm='rm -I -v'
alias cp='cp -v'
alias dbox='nautilus ~/Dropbox/'
alias listhook='(cd `git rev-parse --show-toplevel` && tree `git config core.hooksPath`)'
alias magit='vim -c MagitOnly'
alias tint2re='killall -USR1 tint2'
alias bdfolder='rm -rf build && mkdir build && cd build'
alias styleall='astyle --suffix=none `find . -regex ".*\.[ch]p*p*$"`'
